<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_saldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="39sp"
        android:textStyle="bold"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="5sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingrese su RUT:"
        android:textSize="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"/>

    <EditText
        android:id="@+id/et_validarRut"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="ej: 1000"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginBottom="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingrese su clave:"
        android:textSize="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"/>

    <EditText
        android:id="@+id/et_validarClave"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="ej: 12345678-k"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginBottom="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresa el monto a pagar:"
        android:textSize="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"/>

    <EditText
        android:id="@+id/et_pago"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="ej: 1000"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginBottom="70sp"/>

    <Button
        android:id="@+id/bt_pagar"
        android:onClick="realizar_pago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pagar"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"/>

    <Button
        android:id="@+id/bt_historial"
        android:onClick="verHistorialPago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver cartola"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"/>

    <Button
        android:id="@+id/bt_volver"
        android:onClick="volverDesdePago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"/>

</LinearLayout>